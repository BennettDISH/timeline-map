.settings-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
  padding: 20px;

  .settings-header {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
    padding: 30px;

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 20px;

      .header-text {
        h1 {
          font-size: 2.5rem;
          color: #2d3748;
          margin: 0 0 10px 0;
          font-weight: 700;
        }

        p {
          color: #718096;
          font-size: 1.1rem;
          margin: 0;
        }
      }

      .header-actions {
        display: flex;
        gap: 12px;

        .back-button, .view-button {
          padding: 12px 20px;
          border-radius: 8px;
          text-decoration: none;
          font-weight: 600;
          transition: all 0.2s;
          border: none;
          cursor: pointer;
        }

        .back-button {
          background: #e2e8f0;
          color: #4a5568;
          
          &:hover {
            background: #cbd5e0;
            transform: translateY(-1px);
          }
        }

        .view-button {
          background: #2d3748;
          color: white;
          
          &:hover {
            background: #1a202c;
            transform: translateY(-1px);
          }
        }
      }
    }
  }

  .settings-container {
    max-width: 1200px;
    margin: 0 auto;

    .error-message, .success-message {
      padding: 16px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      font-weight: 500;
    }

    .error-message {
      background: #fed7d7;
      color: #c53030;
      border: 1px solid #feb2b2;
    }

    .success-message {
      background: #c6f6d5;
      color: #22543d;
      border: 1px solid #9ae6b4;
    }

    .settings-section {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
      overflow: hidden;

      h2 {
        background: linear-gradient(135deg, #2d3748, #4a5568);
        color: white;
        padding: 20px 30px;
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
      }

      .settings-form {
        padding: 30px;

        .form-group {
          margin-bottom: 24px;

          label {
            display: block;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 8px;
            font-size: 1rem;
          }

          input, textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.2s;
            font-family: inherit;

            &:focus {
              outline: none;
              border-color: #4299e1;
              box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
            }

            &:disabled {
              background: #f7fafc;
              color: #a0aec0;
            }
          }

          textarea {
            resize: vertical;
            min-height: 100px;
          }
        }

        .save-button {
          background: linear-gradient(135deg, #48bb78, #38a169);
          color: white;
          border: none;
          padding: 14px 28px;
          border-radius: 8px;
          font-weight: 600;
          font-size: 1rem;
          cursor: pointer;
          transition: all 0.2s;

          &:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
          }

          &:disabled {
            background: #cbd5e0;
            cursor: not-allowed;
            transform: none;
          }
        }
      }

      &.disabled-section {
        opacity: 0.7;

        h2 {
          background: linear-gradient(135deg, #a0aec0, #718096);
        }

        .disabled-message {
          padding: 30px;
          text-align: center;
          color: #718096;

          p {
            margin: 0 0 16px 0;
            font-size: 1.1rem;
          }

          .button {
            display: inline-block;
            background: #4299e1;
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.2s;

            &:hover {
              background: #3182ce;
              transform: translateY(-1px);
            }
          }
        }
      }
    }

    .timeline-images-container {
      padding: 30px;

      .empty-state {
        text-align: center;
        color: #718096;
        padding: 40px 20px;

        p {
          margin: 0 0 12px 0;
          font-size: 1.1rem;
        }
      }

      .timeline-images-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 40px;

        .timeline-image-item {
          background: #f7fafc;
          border-radius: 12px;
          overflow: hidden;
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
          transition: all 0.2s;

          &:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
          }

          img {
            width: 100%;
            height: 180px;
            object-fit: cover;
          }

          .image-info {
            padding: 16px;

            h4 {
              margin: 0 0 8px 0;
              color: #2d3748;
              font-size: 1.1rem;
              font-weight: 600;
            }

            p {
              margin: 0 0 12px 0;
              color: #718096;
              font-size: 0.95rem;
            }

            .default-badge {
              background: #48bb78;
              color: white;
              padding: 4px 8px;
              border-radius: 4px;
              font-size: 0.8rem;
              font-weight: 600;
            }
          }

          .image-actions {
            padding: 0 16px 16px 16px;
            display: flex;
            gap: 6px;

            .align-button {
              background: #9f7aea;
              color: white;
              border: none;
              padding: 8px 12px;
              border-radius: 6px;
              font-size: 0.9rem;
              cursor: pointer;
              transition: all 0.2s;

              &:hover:not(:disabled) {
                background: #805ad5;
              }

              &:disabled {
                opacity: 0.6;
                cursor: not-allowed;
              }
            }

            .edit-button {
              background: #4299e1;
              color: white;
              border: none;
              padding: 8px 12px;
              border-radius: 6px;
              font-size: 0.9rem;
              cursor: pointer;
              transition: all 0.2s;

              &:hover:not(:disabled) {
                background: #3182ce;
              }

              &:disabled {
                opacity: 0.6;
                cursor: not-allowed;
              }
            }

            .default-button {
              background: #e2e8f0;
              color: #4a5568;
              border: none;
              padding: 8px 12px;
              border-radius: 6px;
              font-size: 0.9rem;
              cursor: pointer;
              transition: all 0.2s;
              flex: 1;

              &:hover:not(:disabled) {
                background: #cbd5e0;
              }

              &.is-default {
                background: #48bb78;
                color: white;

                &:hover:not(:disabled) {
                  background: #38a169;
                }
              }

              &:disabled {
                opacity: 0.6;
                cursor: not-allowed;
              }
            }

            .remove-button {
              background: #e53e3e;
              color: white;
              border: none;
              padding: 8px 12px;
              border-radius: 6px;
              font-size: 0.9rem;
              cursor: pointer;
              transition: all 0.2s;

              &:hover:not(:disabled) {
                background: #c53030;
              }

              &:disabled {
                opacity: 0.6;
                cursor: not-allowed;
              }
            }
          }
        }
      }

      .add-timeline-image {
        border-top: 2px solid #e2e8f0;
        padding-top: 30px;

        .add-timeline-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          margin-bottom: 20px;

          h3 {
            color: #2d3748;
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
          }

          .toggle-form-button {
            background: #4299e1;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;

            &:hover:not(:disabled) {
              background: #3182ce;
              transform: translateY(-1px);
            }

            &:disabled {
              background: #cbd5e0;
              cursor: not-allowed;
            }
          }
        }

        .timeline-image-form {
          background: #f7fafc;
          border: 2px solid #e2e8f0;
          border-radius: 12px;
          padding: 24px;
          margin-bottom: 20px;

          .form-group {
            margin-bottom: 20px;

            label {
              display: block;
              font-weight: 600;
              color: #2d3748;
              margin-bottom: 8px;
              font-size: 1rem;
            }

            select, input[type="number"] {
              width: 100%;
              padding: 10px 14px;
              border: 2px solid #e2e8f0;
              border-radius: 6px;
              font-size: 1rem;
              transition: all 0.2s;

              &:focus {
                outline: none;
                border-color: #4299e1;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
              }

              &:disabled {
                background: #edf2f7;
                color: #a0aec0;
              }
            }

            &.checkbox-group {
              .checkbox-label {
                display: flex;
                align-items: flex-start;
                gap: 12px;
                cursor: pointer;
                font-weight: 500;
                color: #4a5568;

                input[type="checkbox"] {
                  width: auto;
                  margin: 0;
                }

                .checkmark {
                  width: 20px;
                  height: 20px;
                  background: white;
                  border: 2px solid #e2e8f0;
                  border-radius: 4px;
                  position: relative;
                  flex-shrink: 0;
                  margin-top: 2px;
                  transition: all 0.2s;

                  &::after {
                    content: 'âœ“';
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    color: white;
                    font-size: 12px;
                    font-weight: bold;
                    opacity: 0;
                    transition: opacity 0.2s;
                  }
                }

                input[type="checkbox"]:checked + .checkmark {
                  background: #48bb78;
                  border-color: #48bb78;

                  &::after {
                    opacity: 1;
                  }
                }

                input[type="checkbox"] {
                  display: none;
                }
              }
            }
          }

          .selected-image-preview {
            margin: 16px 0;
            text-align: center;

            img {
              max-width: 200px;
              max-height: 120px;
              object-fit: cover;
              border-radius: 8px;
              box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }
          }

          .timeline-controls {
            margin: 20px 0;

            > label {
              display: block;
              font-weight: 600;
              color: #2d3748;
              margin-bottom: 16px;
              font-size: 1rem;
            }

            .timeline-visual {
              margin-bottom: 20px;

              .timeline-bar {
                position: relative;
                height: 40px;
                background: #e2e8f0;
                border-radius: 20px;
                margin: 0 20px;
                overflow: hidden;

                .timeline-range-indicator {
                  position: absolute;
                  top: 0;
                  height: 100%;
                  background: linear-gradient(90deg, #4299e1, #3182ce);
                  border-radius: 20px;
                  transition: all 0.3s ease;
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  min-width: 80px;

                  .range-label {
                    color: white;
                    font-size: 0.8rem;
                    font-weight: 600;
                    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
                    white-space: nowrap;
                  }
                }
              }

              .timeline-labels {
                display: flex;
                justify-content: space-between;
                padding: 0 20px;
                margin-top: 8px;

                span {
                  font-size: 0.9rem;
                  color: #718096;
                  font-weight: 500;
                }
              }
            }

            .time-inputs {
              display: grid;
              grid-template-columns: 1fr 1fr;
              gap: 16px;

              .input-group {
                label {
                  display: block;
                  font-size: 0.9rem;
                  font-weight: 500;
                  color: #4a5568;
                  margin-bottom: 6px;
                }

                input {
                  width: 100%;
                  padding: 8px 12px;
                  border: 2px solid #e2e8f0;
                  border-radius: 6px;
                  font-size: 0.95rem;

                  &:focus {
                    outline: none;
                    border-color: #4299e1;
                    box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
                  }
                }
              }
            }
          }

          .form-actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;

            .add-button {
              background: linear-gradient(135deg, #48bb78, #38a169);
              color: white;
              border: none;
              padding: 12px 24px;
              border-radius: 8px;
              font-weight: 600;
              cursor: pointer;
              transition: all 0.2s;
              flex: 1;

              &:hover:not(:disabled) {
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
              }

              &:disabled {
                background: #cbd5e0;
                cursor: not-allowed;
                transform: none;
              }
            }

            .cancel-button {
              background: #e2e8f0;
              color: #4a5568;
              border: none;
              padding: 12px 24px;
              border-radius: 8px;
              font-weight: 600;
              cursor: pointer;
              transition: all 0.2s;

              &:hover:not(:disabled) {
                background: #cbd5e0;
              }

              &:disabled {
                opacity: 0.6;
                cursor: not-allowed;
              }
            }
          }
        }

        .available-images-hint {
          text-align: center;
          padding: 20px;
          background: #f7fafc;
          border-radius: 8px;
          border: 2px dashed #cbd5e0;

          p {
            color: #718096;
            margin: 0 0 8px 0;
            
            &:first-child {
              font-weight: 600;
              color: #4a5568;
            }
          }
        }

        .empty-state {
          text-align: center;
          padding: 40px;
          background: #f7fafc;
          border-radius: 8px;
          border: 2px dashed #cbd5e0;

          p {
            color: #718096;
            margin: 0 0 16px 0;
          }

          .button {
            display: inline-block;
            background: #4299e1;
            color: white;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.2s;

            &:hover {
              background: #3182ce;
              transform: translateY(-1px);
            }
          }
        }
      }
    }
  }
}

// Loading and error states
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  background: white;
  border-radius: 12px;
  margin: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #e2e8f0;
    border-top: 4px solid #4299e1;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 16px;
  }

  p {
    color: #718096;
    font-size: 1.1rem;
  }
}

.error-container {
  background: white;
  border-radius: 12px;
  padding: 40px;
  margin: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  text-align: center;

  h2 {
    color: #e53e3e;
    margin: 0 0 16px 0;
  }

  p {
    color: #718096;
    margin: 0 0 24px 0;
  }

  .back-link {
    display: inline-block;
    background: #4299e1;
    color: white;
    text-decoration: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s;

    &:hover {
      background: #3182ce;
      transform: translateY(-1px);
    }
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}